# === Тайминг ===
DELAY_HOURS=3                   # задержка перед первым уведомлением
REPEAT_INTERVAL_HOURS=3         # интервал повторных уведомлений
TTL_HOURS=24                    # срок жизни серии с момента последнего упоминания

# === Тихие часы и часовой пояс ===
TZ=Asia/Yekaterinburg          # Челябинск
QUIET_START=22:00              # включительно
QUIET_END=09:00                # отправлять начиная с этого времени

# === Форматирование сообщений (обрезка) ===
TRUNC_TASK_TITLE_LEN=50
TRUNC_COMMENT_LEN=50

# === Админское ===
QUEUE_TOP_N=10                 # сколько показать в /queue
ADMIN_IDS=123,456              # chat_id админов через запятую

# === Telegram Bot ===
BOT_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# === Pyrus API (авторизация v4) ===
PYRUS_API_URL=https://api.pyrus.com/v4/
PYRUS_LOGIN=you@company.com
PYRUS_SECURITY_KEY=xxxxxxxxxxxxxxxx    # для POST /auth (получения access_token)

# === Подпись вебхуков Pyrus (секрет интеграции для HMAC-SHA1) ===
PYRUS_WEBHOOK_SECRET=yyyyyyyyyyyyyyyy

# === Разработка ===
DEV_SKIP_PYRUS_SIG=false       # true - пропустить проверку подписи в dev-режиме

# === Supabase ===
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
